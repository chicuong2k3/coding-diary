@if (IsHomePage)
{
    <!-- Hero section -->
    <section class="hero hero-compact">
        <div class="hero-bg" role="img" aria-hidden="true">
            <span class="bg-layer" style="background-image: url('/images/Felix_Argyle_Scared_By_JavaScript_The_Good_Parts.png');"></span>
            <span class="bg-layer" style="background-image: url('/images/Kaguya_Shinomiya_Exceptional_C.png');"></span>
            <span class="bg-layer" style="background-image: url('/images/Kobayashi_Holds_9_Algorithms_That_Changed_The_World.png');"></span>
            <span class="bg-layer" style="background-image: url('/images/Minori_Hanasato_Programming_Rust.png');"></span>
            <span class="bg-layer" style="background-image: url('/images/Professor_Shinonome_Finds_SICP.jpg');"></span>
        </div>
        <div class="hero-inner">
            <div class="hero-title">Code Magic</div>
            <div class="hero-sub">Notes, thoughts, and learnings from my coding journey</div>
        </div>
        <svg class="hero-wave" viewBox="0 0 1440 100" preserveAspectRatio="none" aria-hidden="true">
            <path class="wave-path" d="M0,40 Q360,100 720,50 T1440,60 L1440,100 L0,100 Z"/>
        </svg>
    </section>

    <!-- Quote section -->
    <section class="quote-section">
        <blockquote class="featured-quote">
            <p>"Programming is the closest thing to magic."</p>
        </blockquote>
    </section>

    <!-- Recent Posts section -->
    <section class="posts-section">
        <div class="posts-header">
            <h2>Trang chủ</h2>
            <p>Các bài viết mới nhất</p>
        </div>
        <div class="posts-grid">
            @foreach (var post in RecentPosts)
            {
                <a href="@post.Slug.TrimStart('/')" class="post-card-home">
                    <div class="post-card-inner">
                        <div class="post-card-date">
                            <span class="date-day">@(((DateTime)post.Date!).Day)</span>
                            <span class="date-month">@(((DateTime)post.Date).ToString("MMM"))</span>
                        </div>
                        <div class="post-card-body">
                            <h3>@post.Title</h3>
                            <p>@post.Description</p>
                            <div class="post-card-tags">
                                @foreach (var tag in post.Tags.Take(3))
                                {
                                    <span class="tag-sm">#@tag</span>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>
}
else
{
    <div class="page sakura-page @(ShowTags ? "" : "no-left-sidebar") @(ShowToc ? "" : "no-right-sidebar")">
        @if (ShowTags)
        {
            <aside class="left-sidebar">
                <div class="sidebar-tags">
                    <TagCloud/>
                </div>
            </aside>
        }

        <main class="doc-main">
            <article class="content">
                @Body
                @if (IsBlogPost)
                {
                    <PostNavigation />
                }
            </article>
        </main>

        @if (ShowToc)
        {
            <aside class="toc-sidebar">
                <TableOfContents />
            </aside>
        }
    </div>
}



