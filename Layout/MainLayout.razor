@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JS

@code {
    private string CurrentPath => Navigation.ToBaseRelativePath(Navigation.Uri).Trim('/');
    private bool IsHomePage => CurrentPath == "";
    private bool IsBlogPost => CurrentPath.StartsWith("blog/", StringComparison.OrdinalIgnoreCase);
    private bool IsBookPage => CurrentPath.Equals("book", StringComparison.OrdinalIgnoreCase)
    || CurrentPath.StartsWith("book/", StringComparison.OrdinalIgnoreCase);
    private bool ShowToc => IsBlogPost || GeneratedContentIndex.GetPages().Any(p =>
    p.Slug.Equals("/" + CurrentPath, StringComparison.OrdinalIgnoreCase) ||
    p.Slug.StartsWith("/" + CurrentPath + "/", StringComparison.OrdinalIgnoreCase));
    private bool ShowBookChapters => IsBlogPost || ShowToc;

    private bool _isDarkTheme = true;
    private bool _isSearchOpen = false;

    private record BookInfo(string Name, string Slug, int ChapterCount, PageModel LatestChapter);

    private IEnumerable<BookInfo> Books => GeneratedContentIndex.GetPages()
    .Where(p => !p.Draft && p.Tags.Any())
    .GroupBy(p => p.Tags.First(), StringComparer.OrdinalIgnoreCase)
    .Select(g => new BookInfo(
    g.Key,
    g.Key.ToLower().Replace(" ", "-"),
    g.Count(),
    g.OrderByDescending(p => p.Date).First()
    ))
    .OrderByDescending(b => b.LatestChapter.Date);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "theme");
            _isDarkTheme = savedTheme != "light";
            await ApplyTheme();
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDarkTheme = !_isDarkTheme;
        await ApplyTheme();
        await JS.InvokeVoidAsync("localStorage.setItem", "theme", _isDarkTheme ? "dark" : "light");
    }

    private async Task ApplyTheme()
    {
        var theme = _isDarkTheme ? "dark" : "light";
        await JS.InvokeVoidAsync("eval", $"document.documentElement.setAttribute('data-theme', '{theme}')");
    }

    private void OpenSearch()
    {
        _isSearchOpen = true;
    }
}

