                <span class="bg-layer"
                    style="background-image: url('/images/Minori_Hanasato_Programming_Rust.png');"></span>
                <span class="bg-layer" style="background-image: url('/images/Professor_Shinonome_Finds_SICP.jpg');"></span>
            </div>
            <div class="hero-inner">
                <div class="hero-title">Code Magic</div>
            </div>
        </section>

        <!-- Quote section -->
        <section class="quote-section">
            <div class="featured-quote">
                <p class="m-0">"Nothing is hidden that will not be revealed."</p>
            </div>
        </section>

        <!-- Books section -->
        <section class="posts-section">
            <div class="posts-header">
                <h2>Thư viện sách</h2>
                <p>Danh sách sách đã và đang dịch</p>
            </div>
            <div class="books-grid">
                @foreach (var book in Books)
                {
                    <a href="book/@book.Slug" class="book-card">
                        <div class="book-card-inner">
                            <div class="book-icon">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                    stroke-width="2">
                                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" />
                                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" />
                                </svg>
                            </div>
                            <div class="book-card-body">
                                <h3>@book.Name</h3>
                                <div class="book-meta">
                                    <span class="chapter-count">@book.ChapterCount chương</span>
                                    <span class="latest-update">Cập nhật:
                                        @(((DateTime)book.LatestChapter.Date!).ToString("dd/MM/yyyy"))</span>
                                </div>
                                <p class="latest-chapter">Chương mới nhất: @book.LatestChapter.Title</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </section>
    }
    else
    {
        <div class="page sakura-page @(ShowBookChapters ? "" : "no-left-sidebar") @(ShowToc ? "" : "no-right-sidebar")">
            @if (ShowBookChapters)
            {
                <aside class="left-sidebar">
                    <div class="sidebar-tags">
                        <BookChapters />
                    </div>
                </aside>
            }

            <main class="doc-main">
                <article class="content">
                    @Body
                    @if (IsBlogPost)
                    {
                        <ChapterNavigation />
                    }
                </article>
            </main>

            @if (ShowToc)
            {
                <aside class="toc-sidebar">
                    <TableOfContents />
                </aside>
            }
        </div>
    }



    <!-- Footer section -->
    <footer class="home-footer site-footer">
        <div class="footer-inner">
            <div class="footer-left">
                <p>&copy; @DateTime.Now.Year Code Magic. All rights reserved.</p>
            </div>
            <div class="footer-right">
