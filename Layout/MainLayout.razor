@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject IJSRuntime JS
@using Blake.Generated
@using Blake.Types

@code {
    private bool IsHomePage => Navigation.ToBaseRelativePath(Navigation.Uri).Trim('/') == "";
    private bool _isDarkTheme = true;
    private bool _isSearchOpen = false;

    private IEnumerable<PageModel> RecentPosts => GeneratedContentIndex.GetPages()
        .Where(p => !p.Draft)
        .OrderByDescending(p => p.Date)
        .Take(6);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var savedTheme = await JS.InvokeAsync<string>("localStorage.getItem", "theme");
            _isDarkTheme = savedTheme != "light";
            await ApplyTheme();
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDarkTheme = !_isDarkTheme;
        await ApplyTheme();
        await JS.InvokeVoidAsync("localStorage.setItem", "theme", _isDarkTheme ? "dark" : "light");
    }

    private async Task ApplyTheme()
    {
        var theme = _isDarkTheme ? "dark" : "light";
        await JS.InvokeVoidAsync("eval", $"document.documentElement.setAttribute('data-theme', '{theme}')");
    }

    private void OpenSearch()
    {
        _isSearchOpen = true;
    }
}

<header class="sakura-header">
    <div class="sakura-header-inner">
        <div class="brand-wrap">
            <a class="brand" href="">Coding Diary</a>
        </div>

        <nav class="main-nav" aria-label="Primary">
            <ul>
                <li><a href="">Trang chủ</a></li>
                <li><a href="blog">Bài viết</a></li>
                <li><a href="about">Giới thiệu</a></li>
                <li><a href="sitemap">Sitemap</a></li>
            </ul>
        </nav>

        <div class="header-actions">
            <div class="icon-row">
                <button class="icon btn-ghost" title="Toggle theme" @onclick="ToggleTheme">
                    @if (_isDarkTheme)
                    {
                        <!-- Moon icon for dark mode -->
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
                        </svg>
                    }
                    else
                    {
                        <!-- Sun icon for light mode -->
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="5"/>
                            <line x1="12" y1="1" x2="12" y2="3"/>
                            <line x1="12" y1="21" x2="12" y2="23"/>
                            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
                            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
                            <line x1="1" y1="12" x2="3" y2="12"/>
                            <line x1="21" y1="12" x2="23" y2="12"/>
                            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
                            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
                        </svg>
                    }
                </button>
                <a class="icon btn-ghost" href="https://github.com/" target="_blank" title="GitHub">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
                <button class="icon btn-ghost search-btn" title="Search" @onclick="OpenSearch">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"/>
                        <path d="m21 21-4.35-4.35"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</header>

@if (IsHomePage)
{
    <!-- Hero section -->
    <section class="hero hero-compact">
        <div class="hero-bg" role="img" aria-hidden="true"></div>
        <div class="hero-inner">
            <div class="hero-title">Coding Diary</div>
            <div class="hero-sub">Notes, thoughts, and learnings from my coding journey</div>
        </div>
        <svg class="hero-wave" viewBox="0 0 1440 100" preserveAspectRatio="none" aria-hidden="true">
            <path class="wave-path" d="M0,40 Q360,100 720,50 T1440,60 L1440,100 L0,100 Z"/>
        </svg>
    </section>

    <!-- Quote section -->
    <section class="quote-section">
        <blockquote class="featured-quote">
            <p>"The only way to learn a new programming language is by writing programs in it."</p>
            <cite>- Dennis Ritchie</cite>
        </blockquote>
    </section>

    <!-- Recent Posts section -->
    <section class="posts-section">
        <div class="posts-header">
            <h2>Bài viết gần đây</h2>
            <p>Latest articles and thoughts</p>
        </div>
        <div class="posts-grid">
            @foreach (var post in RecentPosts)
            {
                <a href="@post.Slug.TrimStart('/')" class="post-card-home">
                    <div class="post-card-inner">
                        <div class="post-card-date">
                            <span class="date-day">@(((DateTime)post.Date!).Day)</span>
                            <span class="date-month">@(((DateTime)post.Date).ToString("MMM"))</span>
                        </div>
                        <div class="post-card-body">
                            <h3>@post.Title</h3>
                            <p>@post.Description</p>
                            <div class="post-card-tags">
                                @foreach (var tag in post.Tags.Take(3))
                                {
                                    <span class="tag-sm">#@tag</span>
                                }
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
    </section>
}
else
{
    <div class="page sakura-page">
        <aside class="left-sidebar">
            <div class="sidebar-tags">
                <TagCloud/>
            </div>
        </aside>

        <main class="doc-main">
            <article class="content">
                @Body
            </article>
        </main>

        <aside class="toc-sidebar">
            <TableOfContents />
        </aside>
    </div>
}



<!-- Footer section -->
<section class="home-footer">
    <p></p>
</section>

<SiteSearch @bind-IsOpen="_isSearchOpen" />

  